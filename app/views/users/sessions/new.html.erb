<h2>Anmelden</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <p><%= f.label :email %> oder <%= f.label :nickname %><br />
  <%= f.text_field :email %></p>

  <p><%= f.label :password %><br />
  <%= f.password_field :password %></p>

  <% if devise_mapping.rememberable? -%>
    <p><%= f.check_box :remember_me %> <%= f.label :remember_me %></p>
  <% end -%>

  <p><%= f.submit "Anmelden" %></p>
<% end %>

<h2>Andere Login Methoden</h2>
<ul>
  <% User.omniauth_providers.each do |provider| %>
	<li><%= link_to t('registrations.oauth.sign_in_with', provider: provider.to_s.humanize), user_omniauth_authorize_url(provider) %></li>
  <% end %>
</ul>

<%= render partial: "users/shared/links" %>
